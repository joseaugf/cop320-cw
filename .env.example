# Petshop Observability Demo - Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=petshop
POSTGRES_USER=petshop
POSTGRES_PASSWORD=passwordhere
DATABASE_URL=postgresql://petshop:petshop123@postgres:5432/petshop

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# Service URLs (for inter-service communication)
# ============================================
CATALOG_SERVICE_URL=http://catalog-service:8001
CART_SERVICE_URL=http://cart-service:8002
CHECKOUT_SERVICE_URL=http://checkout-service:8003
FEATURE_FLAG_SERVICE_URL=http://feature-flag-service:8004

# ============================================
# OpenTelemetry Configuration
# ============================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://adot-collector:4317
OTEL_RESOURCE_ATTRIBUTES=service.namespace=petshop-demo,deployment.environment=local

# ============================================
# Frontend Configuration (for browser)
# ============================================
# These use localhost because they're accessed from the browser
VITE_CATALOG_SERVICE_URL=http://localhost:8001
VITE_CART_SERVICE_URL=http://localhost:8002
VITE_CHECKOUT_SERVICE_URL=http://localhost:8003
VITE_FEATURE_FLAG_SERVICE_URL=http://localhost:8004
VITE_OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# ============================================
# Service Ports
# ============================================
CATALOG_SERVICE_PORT=8001
CART_SERVICE_PORT=8002
CHECKOUT_SERVICE_PORT=8003
FEATURE_FLAG_SERVICE_PORT=8004
FRONTEND_PORT=3000

# ============================================
# Development Settings
# ============================================
# Set to 'development' for verbose logging
NODE_ENV=production
LOG_LEVEL=info
